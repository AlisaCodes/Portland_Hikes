{{#if addNewHike}}
<h1>New Rental</h1>
<div>
  <form>
    <div class="form-group">
      <label for="name">Hike Name</label>
      {{input value=name id="name"}}
    </div>

    <div class="form-group">
      <label for="location">Location</label>
      {{input value=location id="location"}}
    </div>

    <div class="form-group">
      <label for="length">Length</label>
      {{input value=length id="length"}}
    </div>

    <div class="form-group">
      <label for="elevation">Elevation Gain</label>
      {{input value=elevation id="elevation"}}
    </div>

    <div class="form-group">
      <label for="notes">Notes</label>
      {{input value=notes id="notes"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <button type="button" class="btn btn-primary"{{action 'save1'}}>Save</button>
  </form>
</div>
{{else}}
  <button type="button" class="btn btn-primary"{{action 'hikeFormShow'}}>New Hike</button>
{{/if}}
